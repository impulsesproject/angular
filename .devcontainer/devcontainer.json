{
  "name": "angular-impulse-environment",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "azuretools.vscode-docker",

        "xabikos.javascriptsnippets",

        "angular.ng-template",
        "johnpapa.angular2",
        "editorconfig.editorconfig",

        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",

        "formulahendry.code-runner",
        "streetsidesoftware.code-spell-checker",

        "Codeium.codeium",
        "dbaeumer.vscode-eslint",
        "seyyedkhandon.firacode",
        "codezombiech.gitignore",
        "ecmel.vscode-html-css",

        "visualstudioexptteam.vscodeintellicode",
        "visualstudioexptteam.intellicode-api-usage-examples",
        "visualstudioexptteam.vscodeintellicode-completions",

        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",

        "leizongmin.node-module-intellisense",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",

        "esbenp.prettier-vscode",
        "gruntfuggly.todo-tree",

        "quinusocio.vsc-material-theme",
        "quinusocio.vsc-material-theme-icons",

        "oderwat.indent-rainbow",
        "shardulm94.trailing-spaces",

        "johnpapa.vscode-peacock",
        "bierner.emojisense",
        "mdickin.markdown-shortcuts"
      ]
    }
  },

  "forwardPorts": [4200],

  "portsAttributes": {
    "4200": {
      "label": "Angular dev server",
      "onAutoForward": "notify"
    }
  },

  "workspaceFolder": "/workspace",
  "postCreateCommand": "chmod +x /workspace/.devcontainer/postCreate.sh && /workspace/.devcontainer/postCreate.sh",
  "remoteUser": "root"
}
